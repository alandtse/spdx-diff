{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDescription__",
  "version": "0.2.1",
  "manifest_version": 2,
  "default_locale": "en",
  "icons": {
    "128": "images/spdx.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "32": "images/spdx.png"
    }
  },
  "options_ui": {
    "page": "pages/options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "*://spdx.org/*"
  ]
}
